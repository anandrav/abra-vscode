{
  "name": "Abra",
  "scopeName": "source.abra",
  "patterns": [
    {
      "include": "#shebang"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#attributes"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#storage"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#types"
    },
    {
      "include": "#variants"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#punctuation"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "shebang": {
      "patterns": [
        {
          "name": "comment.line.shebang.abra",
          "match": "^#!.*$"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "comment": "Line comments",
          "name": "comment.line.double-slash.abra",
          "match": "(//).*$",
          "captures": {
            "1": {
              "name": "punctuation.definition.comment.abra"
            }
          }
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "comment": "Attributes like #host, #foreign, etc.",
          "name": "meta.attribute.abra",
          "match": "(#)\\s*([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "punctuation.definition.attribute.abra"
            },
            "2": {
              "name": "entity.name.type.attribute.abra"
            }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.abra",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.abra",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.abra",
          "match": "\\b(if|else|match|return|break|continue|for|while|in|panic)\\b"
        },
        {
          "name": "keyword.operator.logical.abra",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "keyword.control.import.abra",
          "match": "\\b(use|as|except)\\b"
        },
        {
          "name": "keyword.other.abra",
          "match": "\\b(impl)\\b"
        },
        {
          "name": "variable.language.wildcard.abra",
          "match": "\\b_\\b"
        }
      ]
    },
    "storage": {
      "patterns": [
        {
          "name": "storage.type.abra",
          "match": "\\b(let|var|type|enum|struct|interface|implement|extend|outputtype)\\b"
        },
        {
          "name": "storage.type.function.abra",
          "match": "\\b(fn)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.abra",
          "match": "\\b(true|false|nil)\\b"
        },
        {
          "name": "constant.numeric.float.abra",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.abra",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.abra",
          "match": "\\b(int|float|bool|string|void)\\b"
        },
        {
          "comment": "Generic Parameters (PolyIdent in lexer) - Upper followed by digits/underscore only",
          "name": "entity.name.type.parameter.abra",
          "match": "\\b[A-Z][0-9_]*\\b"
        },
        {
          "comment": "Standard Types - Upper followed by mixed alphanumeric",
          "name": "entity.name.type.abra",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "keyword.other.self.abra",
          "match": "\\bSelf\\b"
        }
      ]
    },
    "variants": {
      "patterns": [
        {
          "comment": "Enum variants/Accessors with leading dot",
          "match": "(\\.)([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "punctuation.separator.variant.abra"
            },
            "2": {
              "name": "variable.other.enummember.abra"
            }
          }
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "comment": "Function definition",
          "match": "\\b(fn)\\s+([a-z][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "storage.type.function.abra"
            },
            "2": {
              "name": "entity.name.function.abra"
            }
          }
        },
        {
          "comment": "Function call",
          "match": "\\b([a-z][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": {
              "name": "entity.name.function.call.abra"
            }
          }
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.parameter.abra",
          "match": "\\b[a-z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.abra",
          "match": "->"
        },
        {
          "name": "keyword.operator.concat.abra",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.comparison.abra",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.abra",
          "match": "(\\+|-|\\*|/|%|\\^)"
        },
        {
          "name": "keyword.operator.assignment.abra",
          "match": "(\\+=|=)"
        },
        {
          "name": "keyword.operator.unwrap.abra",
          "match": "!"
        },
        {
          "name": "punctuation.separator.path.abra",
          "match": "/"
        },
        {
          "name": "keyword.operator.type.abra",
          "match": "\\|"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.terminator.abra",
          "match": ";"
        },
        {
          "name": "punctuation.separator.abra",
          "match": ","
        },
        {
          "name": "punctuation.accessor.abra",
          "match": "\\."
        },
        {
          "name": "punctuation.brackets.round.abra",
          "match": "[()]"
        },
        {
          "name": "punctuation.brackets.curly.abra",
          "match": "[{}]"
        },
        {
          "name": "punctuation.brackets.square.abra",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.brackets.angle.abra",
          "match": "(?<!=)[<>]"
        }
      ]
    }
  }
}